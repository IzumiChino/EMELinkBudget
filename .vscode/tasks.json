{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug (Clang)",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++20",
                "-g",
                "-Wall",
                "-Wextra",
                "-fPIE",
                "-o",
                "${workspaceFolder}/build/debug/EMELinkBudget",
                "-I${workspaceFolder}/EMELinkBudget/src",
                "-lcurl",
                "-lm",
                "${workspaceFolder}/EMELinkBudget/src/main_linkbudget_interactive.cpp",
                "${workspaceFolder}/EMELinkBudget/src/EMELinkBudget.cpp",
                "${workspaceFolder}/EMELinkBudget/src/GeometryCalculator.cpp",
                "${workspaceFolder}/EMELinkBudget/src/PathLossCalculator.cpp",
                "${workspaceFolder}/EMELinkBudget/src/PolarizationModule.cpp",
                "${workspaceFolder}/EMELinkBudget/src/FaradayRotation.cpp",
                "${workspaceFolder}/EMELinkBudget/src/NoiseCalculator.cpp",
                "${workspaceFolder}/EMELinkBudget/src/SNRCalculator.cpp",
                "${workspaceFolder}/EMELinkBudget/src/IonosphereDataProvider.cpp",
                "${workspaceFolder}/EMELinkBudget/src/IonospherePhysics.cpp",
                "${workspaceFolder}/EMELinkBudget/src/IonexReader.cpp",
                "${workspaceFolder}/EMELinkBudget/src/NOAAGlotecReader.cpp",
                "${workspaceFolder}/EMELinkBudget/src/MoonCalendarReader.cpp",
                "${workspaceFolder}/EMELinkBudget/src/WMMModel.cpp",
                "${workspaceFolder}/EMELinkBudget/src/SimpleHttpClient.cpp",
                "${workspaceFolder}/EMELinkBudget/src/AstronomyAPIClient.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
